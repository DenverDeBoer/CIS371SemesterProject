<!-- Denver DeBoer -->
<!-- Specific recipe display for Slice or Dice -->
<!-- Used to display information such as number of servings, -->
<!-- estimated time to cook, and list of ingredients needed -->
<%
    let ing = recipeData.recipeIng.split(/(\d+\D+)/)
    ing = ing.filter(function(f) {
        return f != ""
    })
%>

<html>
    <head>
        <title>SLICEorDICE</title>
        <style>
            #title {
                font-size: 30px;
                font-style: italic;
                text-align: center;
                margin: 0 auto;
            }
            .return {
                padding: 10px 20px;
                font-size: 16px;
                margin: 10px;
                transition-duration: 0.5s;
                background-color: lightslategrey;
                color: black;
                /*border: 2px solid green;*/
            }
            .return:hover {
                background-color: crimson;
                color: white;
            }
        </style>
    </head>
    <body>
        <span>
            <!-- Title of recipe -->
            <div id="title"><%= recipeData.recipeName %></div>
            <!-- Back button -->
            <a href=/recipeMain><input type="button" value="Back" class="right return"></a>
        </span>
        <ul>
            <li>Servings: <%= recipeData.recipeYield %> servings</li>
            <li>Time: <%= recipeData.recipeTime %> minutes</li>
            <li>Ingredients:</li>
            <% for(let i = 0; i < ing.length; i++) { %>
                <dd>-<%=ing[i]%></dd>
            <% } %>
        </ul>
    </body>
</html>