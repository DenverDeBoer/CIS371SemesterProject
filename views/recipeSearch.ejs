<!-- Denver DeBoer -->
<!-- Page used to search for recipes -->
<!-- User will be able to look up by name, or use custom ingredient list -->
<html>
    <head>
        <title>SLICEorDICE</title>
        <style>
            #title {
                font-size: 30px;
                font-style: italic;
                text-align: center;
                margin: 0 auto;
            }
            .return {
                padding: 10px 20px;
                font-size: 16px;
                margin: 10px;
                transition-duration: 0.5s;
                background-color: darkslategrey;
                color: black;
                /*border: 2px solid green;*/
            }
            .return:hover {
                background-color: crimson;
                color: white;
            }
            .food {
                margin-left: 20px;
            }
        </style>
        <script>
            /* Various form options will be disabled based on user's choice */
            function choice() {
                if(document.getElementById("nameSearch").checked) {
                    document.getElementById("textBox").disabled = false;
                    document.getElementById("someOp").disabled = true;
                    document.getElementById("mostOp").disabled = true;
                    document.getElementById("allOp").disabled = true;
                }
                else if(document.getElementById("ingredientSearch").checked) {
                    document.getElementById("textBox").disabled = true;
                    document.getElementById("someOp").disabled = false;
                    document.getElementById("mostOp").disabled = false;
                    document.getElementById("allOp").disabled = false;
                }
            }
        </script>
    </head>
    <body>
        <span>
            <!-- Title of recipe -->
            <div id="title">Search</div>
            <!-- Back button -->
            <a href=/recipeMain><input type="button" value="Back" class="right return"></a>
        </span>
        <!-- Form to get recipe request data -->
        <form action="/recipeSearch" accept-charset="UTF-8" method="post">
            <!-- First option to allow user to search by name -->
            <div>
                <input type="radio" id="nameSearch" name="inputType" value="nameInput" onchange="choice()">
                <label for="nameSearch">Recipe Name:</label>
                <input type="text" id="textBox" name="textBoxName" value="Recipe Name">
            </div>
            <!-- Second option to allow user to search by ingredients -->
            <div>
                <input type="radio" id="ingredientSearch" name="inputType" value="<%= uList %>" onchange="choice()">
                <label for="ingredientSearch">MyList:</label><br>
                <!-- Loop to display current values of myList in DB -->
                <% let food = uList[0].ingred.split(",") %>
                <% for(let f of food) { %>
                    <span class="food">- <%= f %><br></span>
                <% } %>
                <!-- Section to allow user to decide how many ingredients need to match the recipe -->
                <input type="radio" class="food" id="someOp" name="percentage" value="50">
                <label for="someOp">Some</label>
                <input type="radio" class="food" id="mostOp" name="percentage" value="75">
                <label for="mostOp">Most</label>
                <input type="radio" class="food" id="allOp" name="percentage" value="100">
                <label for="allOp">All</label>
            </div>
            <input type="submit" name="search" value="Search">
        </form>     
    </body>
</html>